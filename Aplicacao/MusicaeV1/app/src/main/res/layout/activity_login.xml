<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backround_login">

    <Space
        android:id="@+id/space1"
        android:layout_width="45dp"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="222dp"
        android:layout_height="261dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:layout_toEndOf="@id/space1"
        app:srcCompat="@drawable/logo_branco" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_username"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_toEndOf="@id/space1"
        android:layout_marginTop="100dp"
        app:counterEnabled="true"
        app:counterMaxLength="15"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:fontFamily="@font/light"
            android:hint="Username"
            android:inputType="textPersonName"
            android:text="pedro"
            android:textColor="@color/gray"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_input_username"
        android:layout_toEndOf="@id/space1"
        app:errorEnabled="true"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPassword"
            android:layout_width="321dp"
            android:layout_height="50dp"
            android:ems="10"
            android:fontFamily="@font/light"
            android:hint="Password"
            android:inputType="textPassword"
            android:text="123456"
            android:textColor="@color/gray"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/chkRememberme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_input_password"
        android:layout_toEndOf="@id/space1"
        android:fontFamily="@font/regular"
        android:onClick="itemClicked"
        android:text="@string/txtLembrarConta"
        android:textColor="@color/gray"
        android:textSize="18sp"
        app:buttonTint="@color/red" />


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="240dp"
        android:layout_height="31dp"
        android:layout_below="@+id/chkRememberme"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="100dp"
        android:layout_toEndOf="@id/space1"
        android:background="@drawable/button_preto"
        android:fontFamily="@font/bold"
        android:onClick="onClickLogin"
        android:text="@string/txtLogin"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnIP"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@+id/chkRememberme"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="100dp"
        android:layout_toEndOf="@id/btnLogin"
        android:layout_marginLeft="20dp"
        android:background="@drawable/button_preto"
        android:fontFamily="@font/bold"
        android:onClick="onClickIP"
        android:text="+ IP"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_input_password"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/textView8"
        android:fontFamily="@font/regular"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/chkRememberme"
        android:layout_below="@+id/text_input_password"
        android:fontFamily="@font/regular"
        android:text="IP: "
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/gray"
        android:textSize="18sp" />

</RelativeLayout>