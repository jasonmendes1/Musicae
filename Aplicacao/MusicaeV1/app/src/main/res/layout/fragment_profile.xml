<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vistas.ProfileFragment">

    <ImageView
        android:id="@+id/ivBannner"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginTop="76dp"
        android:src="@drawable/perfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/semibold"
        android:text="Username"
        android:textColor="@color/gray"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.341"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivBannner" />

    <TextView
        android:id="@+id/tvID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/semibold"
        android:text="#XXX"
        android:textColor="@color/gray"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/tvEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toEndOf="@+id/tvUsername"
        app:layout_constraintTop_toBottomOf="@+id/ivBannner"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:text="xxxxxxxxxxx@gmail.com"
        android:textColor="@color/gray"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUsername" />

    <Button
        android:id="@+id/btnBanda"
        android:layout_width="115dp"
        android:layout_height="31dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_preto"
        android:fontFamily="@font/semibold"
        android:text="Bandas"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEmail" />

    <Space
        android:id="@+id/spaceH"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBanda" />

    <Space
        android:id="@+id/spaceV"
        android:layout_width="40dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spaceH"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="115dp"
        android:layout_height="38dp"
        android:background="@drawable/button_preto"
        android:fontFamily="@font/semibold"
        android:text="Editar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintStart_toEndOf="@+id/spaceV"
        app:layout_constraintTop_toBottomOf="@+id/spaceH"
        app:layout_constraintVertical_bias="0.947" />

    <ScrollView
        android:id="@+id/svProfile"
        android:layout_width="371dp"
        android:layout_height="341dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.288"
        app:layout_constraintStart_toEndOf="@+id/spaceV"
        app:layout_constraintTop_toBottomOf="@+id/spaceH"
        app:layout_constraintVertical_bias="0.199">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:src="@drawable/side_rect" />

            <TextView
                android:id="@+id/TextViewInst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv1"
                android:fontFamily="@font/bold"
                android:text="Instrumentos"
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvInstrument"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/TextViewInst"
                android:layout_toEndOf="@id/iv1"
                android:fontFamily="@font/regular"
                android:text="Guitarra"
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <Space
                android:id="@+id/space1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/iv1" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_below="@id/space1"
                android:src="@drawable/side_rect" />

            <TextView
                android:id="@+id/TextViewGenr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/space1"
                android:layout_toEndOf="@id/iv2"
                android:fontFamily="@font/bold"
                android:text="GÃ©neros"
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvGenres"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/TextViewGenr"
                android:layout_toEndOf="@id/iv2"
                android:fontFamily="@font/regular"
                android:text="Rap"
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <Space
                android:id="@+id/space2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/iv2" />

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_below="@id/space2"
                android:src="@drawable/side_rect" />

            <TextView
                android:id="@+id/TextVieNme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/space2"
                android:layout_toEndOf="@id/iv2"
                android:fontFamily="@font/bold"
                android:text="Nome"
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/TextVieNme"
                android:layout_toEndOf="@id/iv2"
                android:fontFamily="@font/regular"
                android:text="FullName"
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <Space
                android:id="@+id/space3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/iv3" />

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_below="@id/space3"
                android:src="@drawable/side_rect" />

            <TextView
                android:id="@+id/TextVieGend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/space3"
                android:layout_toEndOf="@id/iv2"
                android:fontFamily="@font/bold"
                android:text="Sexo"
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvGender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/TextVieGend"
                android:layout_toEndOf="@id/iv2"
                android:fontFamily="@font/regular"
                android:text="Male"
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <Space
                android:id="@+id/space4"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/iv4" />

            <ImageView
                android:id="@+id/iv5"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_below="@id/space4"
                android:src="@drawable/side_rect" />

            <TextView
                android:id="@+id/TextVieCty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/space4"
                android:layout_toEndOf="@id/iv2"
                android:fontFamily="@font/bold"
                android:text="Cidade"
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvCity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/TextVieCty"
                android:layout_toEndOf="@id/iv2"
                android:fontFamily="@font/regular"
                android:text="Leiria"
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <Space
                android:id="@+id/space5"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/iv5" />

            <ImageView
                android:id="@+id/iv6"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_below="@id/space5"
                android:src="@drawable/side_rect" />

            <TextView
                android:id="@+id/TextVieNr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/space5"
                android:layout_toEndOf="@id/iv2"
                android:fontFamily="@font/bold"
                android:text="NÃºmero TelemÃ³vel"
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/TextVieNr"
                android:layout_toEndOf="@id/iv2"
                android:fontFamily="@font/regular"
                android:text="(+351) 123456789"
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <Space
                android:id="@+id/space6"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/iv6" />

            <ImageView
                android:id="@+id/iv7"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_below="@id/space6"
                android:src="@drawable/side_rect" />

            <TextView
                android:id="@+id/TextVieBD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/space6"
                android:layout_toEndOf="@id/iv2"
                android:fontFamily="@font/bold"
                android:text="Data de Nascimento"
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvBirthDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/TextVieBD"
                android:layout_toEndOf="@id/iv2"
                android:fontFamily="@font/regular"
                android:text="11/22/3333"
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <Space
                android:id="@+id/space7"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/iv7" />
        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>