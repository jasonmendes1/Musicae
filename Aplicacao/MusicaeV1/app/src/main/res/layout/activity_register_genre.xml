<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vistas.RegisterGenreActivity"
    android:background="@drawable/bkg_genero">

    <Space
        android:id="@+id/spaceV"
        android:layout_width="45dp"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@id/spaceV"
        android:fontFamily="@font/regular"
        android:text="@string/txtGenero"
        android:textColor="@color/gray"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:id="@+id/spaveH"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/textView"
        android:layout_toEndOf="@id/spaceV" />

    <ListView
        android:id="@+id/lvListaGeneros"
        android:layout_width="335dp"
        android:layout_height="499dp"
        android:layout_below="@id/spaveH"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@id/spaceV">

    </ListView>
</RelativeLayout>